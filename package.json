  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^13.13.41",
    "@types/serialport": "^8.0.1",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^4.1.0",
    "eslint": "^7.19.0",
    "jest": "^24.9.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "roots": [
      "dist/"
    ],
    "testEnvironment": "node"
  }
